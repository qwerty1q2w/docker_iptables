*nat
:PREROUTING ACCEPT
:INPUT ACCEPT
:OUTPUT ACCEPT
:POSTROUTING ACCEPT
 -A POSTROUTING -s 172.18.0.1/16 -o eth0 -j MASQUERADE
COMMIT
*filter
:INPUT DROP
:FORWARD DROP
:OUTPUT ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -m state --state ESTABLISHED -j ACCEPT
-A INPUT -s YOUR_IP -p tcp -m multiport --dports 22,80,443 -j ACCEPT
-A FORWARD -i br+ -o eth0 -j ACCEPT
-A FORWARD -i eth0 -o br+ -j ACCEPT
COMMIT
